<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/left_section"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="74dp"
                    android:contentDescription="Space Stations"
                    android:src="@drawable/space_station_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Space Stations" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="74dp"
                    android:contentDescription="Flights"
                    android:src="@drawable/rocket_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flights" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="74dp"
                    android:contentDescription="Rovers"
                    android:src="@drawable/rover_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rovers" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/area_dca"
                android:layout_width="0dp"
                android:layout_height="116dp"
                android:layout_weight="2"
                android:background="@color/green"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DCA"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="91dp"
                android:layout_gravity="center"
                android:contentDescription="Between Buttons"
                android:src="@drawable/double_arrows" />

            <LinearLayout
                android:id="@+id/area_mars"
                android:layout_width="0dp"
                android:layout_height="111dp"
                android:layout_weight="2"
                android:background="@color/green"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MARS"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="444dp"
            android:layout_weight="4"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/one_way_switch"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="@color/orange"
                    android:text="One Way"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:id="@+id/traveller_count_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/orange"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Traveller"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="281dp">

                <ImageView
                    android:id="@+id/image_galaxy"
                    android:layout_width="118dp"
                    android:layout_height="109dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/galaxy" />

                <ImageView
                    android:id="@+id/rocket_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="46dp"
                    android:layout_marginEnd="70dp"
                    android:src="@drawable/rocket_icon" />

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/depart_button_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/green"
            android:text="DEPART" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>